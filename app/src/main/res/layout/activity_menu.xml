<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="3.5"
        android:alpha="5"
        android:background="@drawable/bg_tarjeta"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:gravity="center_vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4.5"
                android:weightSum="10">
                <TextView
                    android:id="@+id/apellidoTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="3.2"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:text="Apellido"
                    android:gravity="bottom|left">
                </TextView>
                <TextView
                    android:id="@+id/nombreTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="2.2"
                    android:autoSizeTextType="uniform"
                    android:text="Nombre"
                    android:gravity="top|left">
                </TextView>

                <TextView
                    android:id="@+id/clubTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1.5"
                    android:autoSizeTextType="uniform"
                    android:text="Club"
                    android:gravity="bottom"
                    android:layout_marginTop="10dp">
                </TextView>

                <TextView
                    android:id="@+id/posicionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1.5"
                    android:autoSizeTextType="uniform"
                    android:text="PosiciÃ³n"
                    android:gravity="top">
                </TextView>

                <TextView
                    android:id="@+id/TxtAlturaPeso"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1.4"
                    android:layout_marginTop="10dp"
                    android:text="Altura: Peso:"
                    android:autoSizeTextType="uniform">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5.5">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sportapp"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="2dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        <TextView
            android:id="@+id/editarTexto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|right"
            android:textSize="20dp"
            android:text="@string/editar"
            android:onClick="Go_editarTarjeta">

        </TextView>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="3.5"
        android:rowCount="1"
        android:columnCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:onClick="Go_wellness"
            android:background="#FFFFFF"
            >
            <TextView
                android:id="@+id/TxtAviso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FALTA"
                android:textColor="#FF0000"
                android:gravity="right"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_wellnes"
                    >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wellnes"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textAlignment="center">
                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:onClick="Go_PSE"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_entrenamiento"
                    >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post-Entrenamiento"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="15sp">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.5">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="#6C2CDD"
            android:onClick="go_Main"
            android:text="Log Out"
            android:textColor="#FFFFFF"
            tools:ignore="OnClick"></Button>
    </LinearLayout>


</LinearLayout>